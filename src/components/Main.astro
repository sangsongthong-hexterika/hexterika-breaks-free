/* Basic overlay styles */
    .overlay {
        display: none;  /* Hidden by default */
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .zoomImage {
        cursor: pointer;
        transition: transform 0.3s ease-in-out, opacity 0.3s ease-in-out;
    }

    .zoomImage.active {
        transform: scale(2);  /* Zoom effect */
        opacity: 0.9;         /* Fading effect */
    }
</style>

<!-- JavaScript -->
<script>
    const zoomImages = document.querySelectorAll('.zoomImage');
    const overlay = document.querySelector('.overlay');  // Keep .overlay

    zoomImages.forEach(image => {
        image.addEventListener('click', () => {
            if (image.style.transform === 'scale(1)') {
                image.style.transform = 'scale(2)';
                image.style.opacity = '0.9';
                overlay.style.display = 'block';
            } else {
                image.style.transform = 'scale(1)';
                image.style.opacity = '1';
                overlay.style.display = 'none';
            }
        }); 
    });

    overlay.addEventListener('click', () => {
        zoomImages.forEach(image => {
            image.style.transform = 'scale(1)';
            image.style.opacity = '1';
        });
        overlay.style.display = 'none';
    });
</script>